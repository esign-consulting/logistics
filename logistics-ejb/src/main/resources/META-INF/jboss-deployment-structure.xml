<jboss-deployment-structure>
    <deployment>
        <!-- Make the JNDI DNS classes visible -->
        <system-properties>
            <property name="java.naming.factory.initial" value="com.sun.jndi.dns.DnsContextFactory"/>
        </system-properties>

        <dependencies>
            <system module="java.naming"/>
        </dependencies>
    </deployment>
</jboss-deployment-structure>
